<div class="container">
  <div class="row">
    <h1>Registre-se</h1>
  </div>
  <div class="container">
      <%= form_for(@ong) do |f| %>
        <%= render '/shared/error_messages' %>

        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :nome, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :nome, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :email, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.email_field :email, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :password, "Senha", class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.password_field :password, class: "form-control" %>    
            </div>   
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :password_confirmation, "Confirme a senha", class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.password_field :password_confirmation, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :rua, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :rua, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :bairro, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :bairro, class: "form-control" %>    
            </div> 
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :cidade, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :cidade, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :estado, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :estado, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :cep, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :cep, class: "form-control" %>    
            </div>
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :telefone, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_field :telefone, class: "form-control" %>    
            </div>  
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :interesses, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_area :interesses, class: "form-control" %>    
            </div> 
        </div>
        
        <div class="row form-group">
            <div class="col-md-2">
                <%= f.label :sobre, class: "form-control" %>    
            </div>
            <div class="col-md-4">
                <%= f.text_area :sobre, class: "form-control" %>    
            </div> 
        </div>
        
        <div class="row">
            <div class="col-md-2">
                <%= f.submit "Criar minha conta", class: "btn btn-primary" %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>